<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="contestUserInfo">

    <select id="getByUidAndUid" resultMap="contestUserInfoMap">
        SELECT * FROM `contest_user_info` WHERE `cid` = #{cid} AND `uid` = #{uid}
    </select>

    <insert id="add" parameterType="ContestUserInfoEntity">
        INSERT INTO `contest_user_info`(`cid`,`uid`,`join_time`)
            VALUES (#{cid},#{uid},#{joinTime})
    </insert>


    <update id="addData">
        UPDATE `contest_user_info`
        <set>
            <if test="submitTimes > 0">
                `submit_times` = `submit_times` + 1,
            </if>
            <if test="acceptTimes > 0">
                `accept_times` = `accept_times` + 1,
            </if>
            <if test="newlyAcceptTime > 0">
                `newly_accept_time` = #{newlyAcceptTime}
            </if>
        </set>
        WHERE `cid` = #{cid} AND `uid` = #{uid}
    </update>

    <resultMap id="contestUserInfoMap" type="ContestUserInfoEntity">
        <result column="cid" property="cid"/>
        <result column="uid" property="score"/>
        <result column="submit_times" property="submitTimes"/>
        <result column="accept_times" property="acceptTimes"/>
        <result column="used_time" property="usedTime"/>
        <result column="join_time" property="joinTime"/>
    </resultMap>
</mapper>