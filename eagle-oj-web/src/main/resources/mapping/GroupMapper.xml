<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="group">

    <insert id="createGroup" useGeneratedKeys="true" keyProperty="gid">
        INSERT INTO `group`(`owner`,`cover`,`name`,`password`,`create_time`) VALUES
            (#{owner},#{cover},#{name},#{password},#{createTime})
    </insert>

    <select id="getGroupByGid" resultMap="groupMap">
        SELECT * FROM `group` WHERE `gid` = #{gid}
    </select>

    <resultMap id="groupMap" type="GroupEntity">
        <id column="gid" property="gid"/>
        <result column="owner" property="owner"/>
        <result column="cover" property="cover" />
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
</mapper>