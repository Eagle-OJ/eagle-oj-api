<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="submission">

    <insert id="insertSubmission" parameterType="SubmissionEntity" useGeneratedKeys="true" keyProperty="sid">
        INSERT INTO `submission` (`owner`, `pid`, `cid`, `source_code`, `lang`,
                                  `time`, `memory`, `status`, `submit_time`)
        VALUES (#{owner}, #{pid}, #{cid}, #{sourceCode}, #{lang}, #{time}, #{memory}, #{status}, #{submitTime})
    </insert>

    <resultMap id="submissionMap" type="SubmissionEntity">
        <id column="sid" property="sid"/>
        <result column="owner" property="owner"/>
        <result column="pid" property="pid" />
        <result column="cid" property="cid"/>
        <result column="source_code" property="sourceCode" />
        <result column="lang" property="lang" />
        <result column="time" property="time"/>
        <result column="memory" property="memory"/>
        <result column="status" property="status"/>
        <result column="submit_time" property="submitTime"/>
    </resultMap>
</mapper>
