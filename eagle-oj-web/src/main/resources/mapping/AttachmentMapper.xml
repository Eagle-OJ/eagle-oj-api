<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="attachment">

    <insert id="addAttachment" parameterType="AttachmentEntity" useGeneratedKeys="true" keyProperty="aid">
        INSERT INTO `attachment`(`owner`,`url`,`upload_time`)
            VALUES (#{owner},#{url},#{uploadTime})
    </insert>

    <select id="getAttachment" resultMap="attachmentMap">
        SELECT * FROM `attachment` WHERE `aid` = #{aid}
    </select>

    <resultMap id="attachmentMap" type="AttachmentEntity">
        <id property="aid" column="aid"/>
        <result property="owner" column="owner"/>
        <result property="url" column="url"/>
        <result property="status" column="status"/>
        <result property="uploadTime" column="upload_time"/>
    </resultMap>
</mapper>